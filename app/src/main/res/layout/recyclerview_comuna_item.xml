<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/recyclerview_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivImagenComuna"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/flag_of_chile" />

    <TextView
        android:id="@+id/tvComuna"
        tools:text="Santiago"
        style="@style/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_recyclerview_image_text"
        app:layout_constraintStart_toEndOf="@id/ivImagenComuna"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/tvRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_recyclerview_image_text"
        app:layout_constraintStart_toEndOf="@id/ivImagenComuna"
        app:layout_constraintTop_toBottomOf="@id/tvComuna"
        tools:text="RegiÃ³n Metropolitana" />

</androidx.constraintlayout.widget.ConstraintLayout>